<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>bamm</AssemblyName>
  </PropertyGroup>

	<ItemGroup>
		<None Update="packages.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Update="userAgents.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Content Include="userScripts\**\*" CopyToOutputDirectory="Always" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Remove="Unused\WMIHelper.cs" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Esprima" Version="3.0.5" />
	  <PackageReference Include="System.Management" Version="9.0.5" />
	</ItemGroup>

</Project>
